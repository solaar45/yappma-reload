<?xml version="1.0"?>
<Containers>
  <!-- PostgreSQL Database -->
  <Container version="2">
    <Name>YAPPMA-PostgreSQL</Name>
    <Repository>postgres:16-alpine</Repository>
    <Registry>https://hub.docker.com/_/postgres</Registry>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://github.com/solaar45/yappma-reload/issues</Support>
    <Project>https://github.com/solaar45/yappma-reload</Project>
    <Overview>PostgreSQL database for YAPPMA Reload</Overview>
    <Category>Productivity: Status:Stable</Category>
    <WebUI></WebUI>
    <Icon>https://raw.githubusercontent.com/docker-library/docs/master/postgres/logo.png</Icon>
    <ExtraParams>--network=yappma</ExtraParams>
    <PostArgs></PostArgs>
    <Config Name="Database User" Target="POSTGRES_USER" Default="postgres" Mode="" Description="PostgreSQL username" Type="Variable" Display="always" Required="true" Mask="false">postgres</Config>
    <Config Name="Database Password" Target="POSTGRES_PASSWORD" Default="" Mode="" Description="PostgreSQL password (CHANGE THIS!)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
    <Config Name="Database Name" Target="POSTGRES_DB" Default="wealth_backend_prod" Mode="" Description="Database name" Type="Variable" Display="always" Required="true" Mask="false">wealth_backend_prod</Config>
    <Config Name="Database Port" Target="5432" Default="5432" Mode="tcp" Description="PostgreSQL port" Type="Port" Display="always" Required="true" Mask="false">5432</Config>
    <Config Name="Data Path" Target="/var/lib/postgresql/data" Default="/mnt/user/appdata/yappma/postgres" Mode="rw" Description="PostgreSQL data directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/yappma/postgres</Config>
  </Container>

  <!-- Backend API -->
  <Container version="2">
    <Name>YAPPMA-Backend</Name>
    <Repository>solaar45/yappma-backend:latest</Repository>
    <Registry>https://hub.docker.com/r/solaar45/yappma-backend</Registry>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://github.com/solaar45/yappma-reload/issues</Support>
    <Project>https://github.com/solaar45/yappma-reload</Project>
    <Overview>YAPPMA Reload - Backend API (Phoenix/Elixir)</Overview>
    <Category>Productivity: Status:Stable</Category>
    <WebUI>http://[IP]:[PORT:4000]</WebUI>
    <Icon>https://raw.githubusercontent.com/solaar45/yappma-reload/main/docs/icon-backend.png</Icon>
    <ExtraParams>--network=yappma --link YAPPMA-PostgreSQL:postgres</ExtraParams>
    <PostArgs></PostArgs>
    <Config Name="API Port" Target="4000" Default="4000" Mode="tcp" Description="Backend API port" Type="Port" Display="always" Required="true" Mask="false">4000</Config>
    <Config Name="Database User" Target="DB_USERNAME" Default="postgres" Mode="" Description="Database username" Type="Variable" Display="always" Required="true" Mask="false">postgres</Config>
    <Config Name="Database Password" Target="DB_PASSWORD" Default="" Mode="" Description="Database password" Type="Variable" Display="always" Required="true" Mask="true"></Config>
    <Config Name="Database Host" Target="DB_HOSTNAME" Default="postgres" Mode="" Description="Database hostname" Type="Variable" Display="always" Required="true" Mask="false">postgres</Config>
    <Config Name="Database Name" Target="DB_DATABASE" Default="wealth_backend_prod" Mode="" Description="Database name" Type="Variable" Display="always" Required="true" Mask="false">wealth_backend_prod</Config>
    <Config Name="Phoenix Secret" Target="SECRET_KEY_BASE" Default="" Mode="" Description="Phoenix secret key (generate with: mix phx.gen.secret)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
    <Config Name="Phoenix Host" Target="PHOENIX_HOST" Default="localhost" Mode="" Description="Phoenix host" Type="Variable" Display="always" Required="false" Mask="false">localhost</Config>
    <Config Name="Alpha Vantage API Key" Target="ALPHA_VANTAGE_API_KEY" Default="" Mode="" Description="Alpha Vantage API key (optional)" Type="Variable" Display="always" Required="false" Mask="true"></Config>
  </Container>

  <!-- Frontend -->
  <Container version="2">
    <Name>YAPPMA-Frontend</Name>
    <Repository>solaar45/yappma-frontend:latest</Repository>
    <Registry>https://hub.docker.com/r/solaar45/yappma-frontend</Registry>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://github.com/solaar45/yappma-reload/issues</Support>
    <Project>https://github.com/solaar45/yappma-reload</Project>
    <Overview>YAPPMA Reload - Frontend Web UI (React)</Overview>
    <Category>Productivity: Status:Stable</Category>
    <WebUI>http://[IP]:[PORT:8080]</WebUI>
    <Icon>https://raw.githubusercontent.com/solaar45/yappma-reload/main/docs/icon-frontend.png</Icon>
    <ExtraParams>--network=yappma --link YAPPMA-Backend:backend</ExtraParams>
    <PostArgs></PostArgs>
    <Config Name="WebUI Port" Target="8080" Default="8080" Mode="tcp" Description="Frontend port" Type="Port" Display="always" Required="true" Mask="false">8080</Config>
  </Container>
</Containers>
